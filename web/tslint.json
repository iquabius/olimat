{
  // "tslint-config-prettier" tem que ser sempre o Ãºltimo da lista
  "extends": ["../tslint.json", "tslint-react", "tslint-config-prettier"],
  "rulesDirectory": ["tslint-plugin-prettier"],
  "rules": {
    "curly": [true, "ignore-same-line"],
    "no-submodule-imports": [
      true,
      "faker",
      "lodash",
      "jest-dom",
      "@material-ui",
      "next",
      "react-apollo",
      "react-jss",
      "react-testing-library",
      "recompose"
    ],

    // Regras relacinadas ao React
    "jsx-boolean-value": ["never"],
    "jsx-no-lambda": false
  }
}
