{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "es5",
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    // Next.js is using Babel to compile the React app.
		// This configuration's only purpuse is for type checking.
		// We're disabling 'composite' when type-checking.
		// See commands in the root package.json
    "noEmit": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "baseUrl": "src",
    "paths": {
      "@olimat/web/*": [
        "*"
      ]
    },
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
		"resolveJsonModule": true,
		// This also don't work with 'declaration' and 'composite'. That's why we
		// disable 'composite' when type-checking. See commands in root package.json
    "isolatedModules": true
  },
  "references": [
    {
      "path": "../api"
    }
  ],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
