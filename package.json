{
  "name": "@olimat/workspace",
  "description": "OliMAT's monorepo workspace package",
  "license": "AGPL-3.0",
  "author": "Josias Iquabius <iquabius@gmail.com>",
  "private": true,
  "devDependencies": {
    "@types/node": "^10.12.18",
    "cypress": "^3.1.4",
    "cypress-testing-library": "^2.3.5",
    "faker": "^4.1.0",
    "lerna": "^3.10.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.3",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.2"
  },
  "repository": "github:iquabius/olimat",
  "scripts": {
    "build": "lerna run build",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "start": "npm-run-all --parallel start:*",
    "start:api": "cd api && npm start",
    "start:web": "cd web && npm start",
    "lint": "tslint --project tsconfig.json && echo \"TSLint: no lint errors\"",
    "lint:fix": "tslint --project tsconfig.json --fix && echo \"TSLint: no lint errors\"",
    "lint:check": "tslint-config-prettier-check ./tslint.json ./api/tslint.json ./web/tslint.json",
    "test": "lerna run test"
  }
}
