{
  "name": "@olimat/workspace",
  "description": "OliMAT's monorepo workspace package",
  "license": "AGPL-3.0",
  "author": "Josias Iquabius <iquabius@gmail.com>",
  "private": true,
  "devDependencies": {
    "@types/classnames": "2.2.7",
    "@types/cookie": "0.3.2",
    "@types/jest": "23.3.13",
    "@types/node": "10.12.18",
    "@types/nprogress": "0.0.29",
    "@types/react-jss": "8.6.0",
    "@types/recompose": "0.30.3",
    "@types/yup": "0.26.6",
    "@typescript-eslint/eslint-plugin": "1.1.0",
    "@typescript-eslint/parser": "1.1.0",
    "cypress": "3.1.4",
    "cypress-testing-library": "2.3.5",
    "eslint": "5.12.1",
    "eslint-config-prettier": "4.0.0",
    "eslint-import-resolver-typescript": "1.1.1",
    "eslint-plugin-import": "2.15.0",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-react": "7.12.4",
    "faker": "4.1.0",
    "jest": "24.0.0",
    "lerna": "3.10.7",
    "npm-run-all": "4.1.5",
    "prettier": "1.15.3",
    "ts-jest": "23.10.5",
    "typescript": "3.2.4"
  },
  "repository": "github:iquabius/olimat",
  "scripts": {
    "build": "lerna run build",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "start": "npm-run-all --parallel start:*",
    "start:api": "cd api && npm start",
    "start:web": "cd web && npm start",
    "lint": "eslint '{api,web}/**/*.{js,ts,tsx}' && echo \"ESLint: no lint errors\"",
    "lint:fix": "eslint '{api,web}/**/*.{js,ts,tsx}' --fix && echo \"ESLint: no lint errors\"",
    "lint:check": "npm-run-all lint:check:*",
    "lint:check:api": "eslint --print-config 'api/**/*' | eslint-config-prettier-check",
    "lint:check:web": "eslint --print-config 'web/**/*' | eslint-config-prettier-check",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:codecov:validate": "curl --data-binary @codecov.yml https://codecov.io/validate",
    "test:watch": "jest --watch",
    "typecheck": "npm-run-all --parallel typecheck:*",
    "typecheck:api": "tsc --noEmit --project api/tsconfig.json",
    "typecheck:web": "tsc --noEmit --project web/tsconfig.json"
  }
}
