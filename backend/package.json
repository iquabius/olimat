{
  "name": "olimat-backend",
  "version": "0.0.1",
  "license": "AGPL-3.0",
  "author": "Josias Iquabius <iquabius@gmail.com>",
  "main": "src/index.js",
  "scripts": {
    "start": "nodemon -e ts,graphql -x ts-node -r dotenv/config src/index.ts",
    "debug": "nodemon -e ts,graphql -x ts-node --inspect -r dotenv/config src/index.ts",
    "playground": "graphql playground --port 3001",
    "dev": "npm-run-all --parallel start playground",
    "lint": "tslint 'src/**/*.ts'",
    "lint:fix": "tslint 'src/**/*.ts' --fix && echo \"tslint: no lint errors\"",
    "tslint-check": "tslint-config-prettier-check ./tslint.json"
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "graphql-yoga": "^1.16.7",
    "jsonwebtoken": "^8.3.0",
    "prisma-binding": "^1.5.16"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.1",
    "dotenv": "^6.1.0",
    "graphql-cli": "^2.16.7",
    "nodemon": "^1.18.4",
    "npm-run-all": "4.1.2",
    "prettier": "^1.14.3",
    "prisma": "^1.19.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^2.0.0",
    "typescript": "^3.1.3"
  }
}
