{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es2018",
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "lib": [
      "esnext", "dom"
    ],
    // Cypress mocha vs jest types issue
    // https://github.com/cypress-io/cypress/issues/1087
    "skipLibCheck": true,
  },
  "include": [
      "src/**/*"
  ],
}
