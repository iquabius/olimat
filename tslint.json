{
  "defaultSeverity": "error",
  "extends": ["tslint:latest", "tslint-config-airbnb", "tslint-config-prettier"],
  "rulesDirectory": ["tslint-plugin-prettier"],
  "rules": {
    "prettier": true,
    "no-console": false,
    "no-implicit-dependencies": [true, "dev"],
    "member-access": false,
    "object-literal-sort-keys": false,
    "ordered-imports": [true, {
      "grouped-imports": true
    }],
    "interface-name": false,

    // Personalização do Style Guide do Airbnb
    "import-name": [false],
    "object-shorthand-properties-first": false,
    // Pra permitir PascalCase nos componentes do React
    // https://github.com/palantir/tslint-react/issues/120
    "variable-name": [true, "allow-pascal-case"]
  }
}
